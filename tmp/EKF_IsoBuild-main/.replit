modules = ["java", "java-17"]
[nix]
channel = "stable-24_05"
packages = ["unzip", "mongodb", "maven", "openjdk"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "DeadsideBot"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "RebuildDeadsideBot"

[[workflows.workflow]]
name = "DeadsideBot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "java -cp ./target/classes:./lib/* com.deadside.bot.Main"

[[workflows.workflow]]
name = "RebuildDeadsideBot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mvn clean package && java -cp ./target/classes:./lib/* com.deadside.bot.Main"

[deployment]
run = ["sh", "-c", "java -cp ./target/classes:./lib/* com.deadside.bot.Main"]

[[ports]]
localPort = 8080
externalPort = 80
